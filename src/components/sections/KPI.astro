<script>
	import { gsap } from 'gsap';

	const numbers = document.querySelectorAll('.gsap-kpi-numbers');
	numbers.forEach((el, i) => {
		gsap.fromTo(
			el,
			{
				textContent: 0,
			},
			{
				duration: 3,
				textContent: i === 0 ? 50 : i == 1 ? 800 : 2000,
				ease: 'power2.out',
				snap: { textContent: 1 },
				scrollTrigger: {
					trigger: '.gsap-kpi-container',
					start: 'center 70%',
				},
			}
		);
	});
</script>
